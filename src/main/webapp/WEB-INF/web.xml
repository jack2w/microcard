<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>MicroCard</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>WeixinDev</display-name>
    <servlet-name>WeixinDev</servlet-name>
    <servlet-class>com.microcard.servlet.WeixinDev</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>TestDataSource</servlet-name>
  	<display-name>TestDataSource</display-name>
  	<description></description>
  	<servlet-class>com.microcard.servlet.TestDataSource</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WeixinDev</servlet-name>
    <url-pattern>/WeixinDev</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>TestDataSource</servlet-name>
  	<url-pattern>/test</url-pattern>
  </servlet-mapping>  
  
   <resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/TAXDB</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  </resource-ref>
</web-app>
