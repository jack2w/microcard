<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>MicroCard</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<listener>
	<listener-class>com.microcard.servlet.RequestListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>ShopEntryServlet</servlet-name>
		<display-name>ShopEntryServlet</display-name>
		<description></description>
		<servlet-class>com.microcard.servlet.ShopEntryServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ShopServlet</servlet-name>
		<display-name>ShopServlet</display-name>
		<description></description>
		<servlet-class>com.microcard.servlet.ShopServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>TestDAO</servlet-name>
		<display-name>TestDAO</display-name>
		<description></description>
		<servlet-class>com.microcard.dao.TestDAO</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PageForward</servlet-name>
		<display-name>PageForward</display-name>
		<description></description>
		<servlet-class>com.microcard.servlet.PageForward</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UserEntryServlet</servlet-name>
		<display-name>UserEntryServlet</display-name>
		<description></description>
		<servlet-class>com.microcard.servlet.User.UserEntryServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CommodityServlet</servlet-name>
		<display-name>CommodityServlet</display-name>
		<description></description>
		<servlet-class>com.microcard.servlet.CommodityServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RecordServlet</servlet-name>
		<display-name>RecordServlet</display-name>
		<description></description>
		<servlet-class>com.microcard.servlet.RecordServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UserServlet</servlet-name>
		<display-name>UserServlet</display-name>
		<description></description>
		<servlet-class>com.microcard.servlet.User.UserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SalesDetailServlet</servlet-name>
		<display-name>SalesDetailServlet</display-name>
		<description></description>
		<servlet-class>com.microcard.servlet.SalesDetailServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SalesServlet</servlet-name>
		<display-name>SalesServlet</display-name>
		<description></description>
		<servlet-class>com.microcard.servlet.SalesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShopEntryServlet</servlet-name>
		<url-pattern>/shopentry</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>ShopServlet</servlet-name>
		<url-pattern>/shopservlet</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>TestDAO</servlet-name>
		<url-pattern>/test</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PageForward</servlet-name>
		<url-pattern>/pageforward</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserEntryServlet</servlet-name>
		<url-pattern>/userentry</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CommodityServlet</servlet-name>
		<url-pattern>/commodityServlet.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RecordServlet</servlet-name>
		<url-pattern>/recordServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/userServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SalesDetailServlet</servlet-name>
		<url-pattern>/salesDetailServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SalesServlet</servlet-name>
		<url-pattern>/salesServlet</url-pattern>
	</servlet-mapping>

	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/microcard</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	
	<taglib>
	<taglib-uri>http://java.sun.com/jstl/core</taglib-uri>
	<taglib-location>/WEB-INF/tlds/c.tld</taglib-location>
	</taglib>
	
	<taglib>
	<taglib-uri>http://java.sun.com/jstl/function</taglib-uri>
	<taglib-location>/WEB-INF/tlds/fn.tld</taglib-location>
	</taglib>
</web-app>
